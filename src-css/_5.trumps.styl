

// LAYOUT

.block
  display: block
.inline
  display: inline
.inline-block
  display: inline-block
.left 
  float: left 
.right
  float: right
.clear
  &:before, &:after
    content: ''
    display: table
  &:after
    clear: both


// TYPE

.t-small
  font-size: 87%
.t-xsmall
  font-size: 77%
.t-center
  text-align: center
.t-caps
  text-transform: uppercase
.t-space1
  letter-spacing: 1px
.t-space2
  letter-spacing: 2px
.t-line0
  line-height: 0
.t-line1
  line-height: 1
.t-line1-1
  line-height: 1.1
.t-line1-2
  line-height: 1.2
.t-300
  font-weight: 300


// SPACE

.px1 
  px($space-1)
.px2 
  px($space-2)
.py1 
  py($space-1)
.py2 
  py($space-2)
.pl0 { padding-left: 0 }
.mb0 { margin-bottom: 0 }
.mb05 { margin-bottom: .5rem }
.mb1 { margin-bottom: $space-1 }
.mt1 { margin-top: $space-1 }
.mb2 { margin-bottom: $space-2 }
.mt2 { margin-top: $space-2 }
.mb3 { margin-bottom: $space-3 }
.mt3 { margin-top: $space-3 }
.mb4 { margin-bottom: $space-4 }
.mt4 { margin-top: $space-4 }
.mb5 { margin-bottom: $space-5 }
.mt5 { margin-top: $space-5 }
.mb6 { margin-bottom: $space-6 }
.mt6 { margin-top: $space-6 }


