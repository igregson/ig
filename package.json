{
    "private": true,
    "scripts": {
        "----VIEWS----": "-----------------------------------------------------------",
        "pug": "pug src/ --out dist/",
        "b-pug": "npm run pug",
        "w-pug": "onchange 'src/**/*.{pug,css}' -- npm run pug",
        "----STYLES----": "-----------------------------------------------------------",
        "b-css": "stylus --print --compress ./src/assets/css/main.styl | postcss --use autoprefixer -b 'last 2 versions' > ./dist/assets/main.css",
        "w-css": "stylus --compress --sourcemap --sourcemap-base ./css/ --watch ./src/assets/css/main.styl --out ./dist/assets/main.css",
        "----MISC----": "----------------------------------------------------------",
        "misc": "cp src/assets/*{.jpg,.pdf} dist/assets",
        "b-misc": "npm run misc",
        "w-misc": "onchange 'src/assets/*{.jpg,.pdf}' -- npm run misc",
        "----SERVE----": "-----------------------------------------------------------",
        "bsync": "browser-sync start --server 'dist' --files 'dist' --port '7777' --no-notify --no-open --no-ghost-mode",
        "watch": "npm-run-all --parallel bsync w-*",
        "prewatch": "npm run build",
        "----BUILD----": "-----------------------------------------------------------",
        "build": "npm-run-all --parallel b-*",
        "prebuild": "rm -rf dist && mkdir dist dist/assets",
        "----DEPLOY----": "----------------------------------------------------------",
        "deploy": "surge --domain isaacgregson.com",
        "predeploy": "npm run build"
    },
    "devDependencies": {
        "browser-sync": "^2.18.13",
        "harp": "^0.24.1",
        "npm-run-all": "^4.1.2",
        "stylus": "^0.54.5",
        "onchange": "^3.3.0",
        "postcss": "^6.0.19",
        "postcss-cli": "^5.0.0",
        "pug": "^2.0.0-rc.4",
        "pug-cli": "git://github.com/pugjs/pug-cli#21bab2ef1401a5c9f3a2320d7191c3cfc3e5dcdc",
        "surge": "^0.20.1"
    }
}